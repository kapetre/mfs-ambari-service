<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration supports_final="true">

    <property>
        <name>mfs.datanode.dir</name>
        <value>/dev/xvdb</value>
        <display-name>DataNode disks</display-name>
        <description>Comma seperated list of disks to use for MFS
        </description>
        <final>true</final>
        <value-attributes>
            <type>directories</type>
        </value-attributes>
        <on-ambari-upgrade add="true"/>
    </property>

    <property>
        <name>mfs.cluster.name</name>
        <value>4thelulz</value>
        <display-name>MFS Cluster Name</display-name>
        <description>MFS Cluster Name
        </description>
    </property>

    <property>
        <name>mfs.ui.port</name>
        <value>8443</value>
        <display-name>MFS Web UI Port</display-name>
        <description>MFS Web UI Port
        </description>
    </property>

    <property>
        <name>mapr.zk.port</name>
        <value>5181</value>
        <display-name>Mapr Zookeeper Port</display-name>
        <description>Mapr zookeeper workaround - using its own port
        </description>
    </property>
</configuration>
